#compdef _quick-lint-js quick-lint-js

# Copyright (C) 2021 Shivam Mehta
# See end of file for extended copyright information.

typeset -A opt_args

function _quick-lint-js() {
        local -i ret=1
        local -a args

        args+=(
         '*: :_files'
        '(-h --help )'{-h,--help}'[Print help message]'
        '(-v --version)'{-v,--version}'[Print version information]'
        '(--lsp --lsp-server)'{--lsp,--lsp-server}'[Run quick-lint-js in LSP server mode]'
        '--exit-fail-on=[Fail with a non-zero exit code if any of these errors are found (default: "all")]'
        '--output-format=[Format to print feedback where FORMAT is one of: gnu-like (default if omitted), vim-qflist-json]'
        '--vim-file-bufnr=[Select a vim buffer for outputting feedback]')

        _arguments -C -S "${args[@]}" && ret=0

        return ret
}

