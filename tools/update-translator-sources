#!/usr/bin/env bash

# Copyright (C) 2020  Matthew "strager" Glazar
# See end of file for extended copyright information.

set -e
set -u

cd "$(dirname "${0}")/.."

main() {
  check_dependencies
  update_template_file
  update_translation_files
  go run ./tools/compile-translations.go
}

check_dependencies() {
  go_version=`go version 2>/dev/null | { read _ _ v _; echo ${v#go}; }`
  min_go_version="1.16"

  if [ "$go_version" = "" ]; then 
    printf 'warning: Go version %s or above required.\n' "$min_go_version" >&2 
  elif [ "$(printf '%s\n' "$min_go_version" "$go_version" | sort -V | head -n1)" = "$go_version" ]; then 
    printf 'warning: Go version %s or above required. You are using version %s\n' "$min_go_version" "$go_version" >&2 
  fi

  xgettext_version="$(xgettext -V 2>/dev/null)" || printf 'warning: xgettext is required\n'
}

update_template_file() {
  pot_file=po/messages.pot
  printf 'updating: %s\n' "${pot_file}"

  pot_temp_file="$(mktemp)"
  xgettext \
    --keyword=QLJS_TRANSLATABLE \
    --output="${pot_temp_file}" \
    --force-po \
    --add-location=file \
    --msgid-bugs-address=strager.nds@gmail.com \
    benchmark/benchmark-translation.cpp \
    src/quick-lint-js/diag/diagnostic-formatter.cpp \
    src/quick-lint-js/diag/diagnostic-types.h \
    test/test-diagnostic-formatter.cpp \
    test/test-vim-qflist-json-diag-reporter.cpp
  sed -i -e 's/charset=CHARSET/charset=UTF-8/g' "${pot_temp_file}"

  mkdir -p po
  msgmerge --backup=none --update -- "${pot_file}" "${pot_temp_file}"
  sed -i -e '/^.POT-Creation-Date:/d' "${pot_file}"

  if ! grep -q "Code generated by" "${pot_file}"; then
    sed -i '1s;^;# Code generated by tools/update-translator-sources. DO NOT EDIT.\n;' "$pot_file"
    sed -i '2s;^;# source: (various)\n\n;' "$pot_file"
  fi

  rm -- "${pot_temp_file}"
}

update_translation_files() {
  for po_file in po/*.po ; do
    printf 'updating: %s\n' "${po_file}"
    msgmerge --backup=none --update -- "${po_file}" po/messages.pot
  done
}

main

