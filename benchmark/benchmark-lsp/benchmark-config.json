{
  "servers": [
    {
      "name": "eslint-server",
      "command": ["node", "./node_modules/eslint-server/lib/index.js", "--stdio"],
      "cwd": "eslint/",
      "allowIncrementalChanges": false,
      "workspaceConfiguration": {
        "run": "onType",
        "validate": "probe"
      }
    },
    {
      "name": "Deno",
      "command": ["deno", "lsp"],
      "diagnosticsMessagesToIgnore": 2,
      "initializationOptions": {
        "enable": true,
        "lint": true,
        "unstable": true
      },
      "workspaceConfiguration": {
        "enable": true,
        "lint": true,
        "unstable": true
      }
    },
    {
      "name": "Deno-nolint",
      "command": ["deno", "lsp"],
      "broken": [
        "change-wait/tiny.js",
        "open-wait-close/tiny.js"
      ],
      "diagnosticsMessagesToIgnore": 1,
      "initializationOptions": {
        "enable": true,
        "lint": false,
        "unstable": true
      },
      "workspaceConfiguration": {
        "enable": true,
        "lint": false,
        "unstable": true
      }
    },
    {
      "name": "Flow",
      "command": ["./run.sh"],
      "cwd": "flow/",
      "waitForEmptyDiagnosticsOnOpen": false
    },
    {
      "name": "quick-lint-js",
      "command": ["quick-lint-js", "--lsp-server"]
    },
    {
      "name": "RSLint",
      "command": ["rslint-lsp"],
      "allowIncrementalChanges": false
    },
    {
      "name": "TypeScript",
      "command": ["node", "./node_modules/.bin/typescript-language-server", "--stdio"],
      "cwd": "typescript/",
      "needFilesOnDisk": true
    }
  ]
}
