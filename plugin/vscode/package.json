{
  "name": "quick-lint-js",
  "description": "Find JavaScript bugs with quick-lint-js",
  "publisher": "quick-lint",
  "version": "3.1.0",
  "license": "SEE LICENSE IN LICENSE",
  "categories": [
    "Linters"
  ],
  "homepage": "https://quick-lint-js.com/",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.49.0"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:json",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./extension.js",
  "extensionDependencies": [
    "vscode.javascript"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "quick-lint-js",
      "properties": {
        "quick-lint-js.logging": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "verbose"
          ],
          "default": "off",
          "description": "Log messages useful for quick-lint-js contributors."
        },
        "quick-lint-js.tracing": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "verbose"
          ],
          "default": "off",
          "description": "Log document changes. Useful for quick-lint-js contributors."
        },
        "quick-lint-js.snarky": {
          "scope": "window",
          "type": "boolean",
          "default": false,
          "description": "Add spice to your failures."
        }
      }
    },
    "languages": [
      {
        "id": "json",
        "filenames": [
          "quick-lint-js.config"
        ]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quick-lint/quick-lint-js.git"
  },
  "bugs": {
    "url": "https://github.com/quick-lint/quick-lint-js/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/quick-lint"
  },
  "scripts": {
    "fmt": "prettier --write '*.js' 'test/*.js' '*.json' '.vscode/*.json'",
    "test": "node test/run-vscode-tests.js"
  },
  "devDependencies": {
    "@vscode/test-electron": "2.3.0",
    "colors": "1.4.0",
    "prettier": "2.8.4",
    "vsce": "2.15.0"
  }
}
